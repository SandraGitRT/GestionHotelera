{% extends "base.njk" %}
{% block titulo %}Limpiezas | Nueva{% endblock %}
{% block contenido %}
    <h1>Nueva Limpieza</h1>
    <form action="/limpiezas/{{habitacion.id}}" method="post">
        <div class="form-group">
            <label for="fecha">Fecha de la limpieza:</label>
            <input class="form-control" type="date" name="fecha" id="fecha" value="{{anyo}}-{{mes}}-{{dia}}" required></div>
            <div class="form-group">
                <label for="observaciones">Observaciones:</label>
                <textarea class="form-control" name="observaciones" id="observaciones"></textarea>
            </div>
            <br>
                <button type="submit" class="btn btn-primary">Guardar Limpieza</button>
            </form>
        {% endblock %}